<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="ledger_host"
        android:title="@string/prefs_ledger_host"
        android:summary="@string/prefs_ledger_host_summary"
        >
    </EditTextPreference>
    <SwitchPreference
        android:key="use_manual_sync"
        android:title="@string/prefs_use_manual_sync"
        android:summary="@string/prefs_use_manual_sync_summary"
        android:defaultValue="false"
        >
    </SwitchPreference>
    <com.infora.ledger.DefaultTransactionAccountPreference
        android:key="default_transaction_account"
        android:title="Default Transaction Account"
        android:summary="Transactions will be reported with the account specified here"
        >
    </com.infora.ledger.DefaultTransactionAccountPreference>
</PreferenceScreen>